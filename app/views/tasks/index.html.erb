<% provide(:title, @user.name) %>

<h1><%= @user.name %>のタスク一覧</h1>

<div class="row">
<div class="col-md-8 col-md-offset-1">
  <table class="table table-hover" id="table-tasks">
    <thead>
      <tr>
        <th>名称</th>
        <th>作成日</th>
        <th></th>
      </tr>
    </thead>

  
    <tbody>
      <% @task.each do |task| %>
          <tr>
          <td><%= link_to task.name, user_task_path(@user, task), id: "task-name" %></td>
          <td><%= l(task.created_at, format: :long) %></td>
          <td><%= link_to "編集", edit_user_task_path(@user, task), class: "btn btn-success" %>
              <%= link_to "削除", user_task_path(@user, task), method: :delete, 
                  data: { confirm: "「#{task.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %></td>
          
      <% end %>
          </tr>
    </tbody>
  </table> 
</div>
</div>