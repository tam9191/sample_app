<% provide(:title, "New Task") %>

<h1>タスク新規作成</h1>

<div class="row">
    <div class="col-md-6 cok-md-offset-3">
        <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
        
            <%= f.label :name, class: "label-form" %>
            <%= f.text_field :name, class: "form-control" %>
            
            <%= f.label :description, class: "label-form" %>
            <%= f.text_area :description, class: "form-control" %>
            
            <%= f.submit "新規登録", class: "btn btn-primary btn-block btn-form" %>
        <% end %>
    </div>
</div>