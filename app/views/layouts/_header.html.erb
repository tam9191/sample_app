<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Sample App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, class: "header_list" %></li>
        <% if logged_in? %>
          <li><%= link_to "利用者一覧", '#', class: "header_list" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header_list" data-toggle="dropdown" id: "dropdown-title">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, class: "header_list" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
